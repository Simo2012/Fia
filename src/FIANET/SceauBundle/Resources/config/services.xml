<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Général -->
        <service id="fianet_sceau.flux" class="FIANET\SceauBundle\Service\GestionFlux">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="validator" />
            <argument type="service" id="translator" />
        </service>
        <service id="fianet_sceau.questionnaire" class="FIANET\SceauBundle\Service\GestionQuestionnaire">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%langue_par_defaut%</argument>
            <argument>%delai_envoi_date_utilisation%</argument>
        </service>
        <service id="fianet_sceau.notes" class="FIANET\SceauBundle\Service\Notes">
        </service>
        <service id="fianet_sceau.questionnaire_repondu" class="FIANET\SceauBundle\Service\QuestionnaireRepondu">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="session"/>
        </service>
        <service id="fianet_sceau.questionnaire_structure" class="FIANET\SceauBundle\Service\QuestionnaireStructure">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="fianet_sceau.relance" class="FIANET\SceauBundle\Service\GestionRelance">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%relance_delai_jours%</argument>
        </service>
        <service id="fianet_sceau.outils.string" class="FIANET\SceauBundle\Service\OutilsString">
            <argument type="service" id="translator"/>
        </service>

        <!-- Extranet -->
        <service id="fianet_sceau.extranet.menu_builder" class="FIANET\SceauBundle\Service\Extranet\MenuBuilder">            
            <argument type="service" id="knp_menu.factory"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="session"/>
            <argument type="service" id="fianet_sceau.extranet.menu_acces"/>            
        </service>

        <service id="fianet_sceau.extranet.menu_acces" class="FIANET\SceauBundle\Service\Extranet\MenuAcces">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="fianet_sceau.extranet.menu" class="Knp\Menu\MenuItem" scope="request">
            <factory service="fianet_sceau.extranet.menu_builder" method="creerMenu"/>
            <argument type="service" id="request"/>
            <tag name="knp_menu.menu" alias="extranet.menu"/>
        </service>

        <service id="fianet_sceau.extranet.user_provider" class="FIANET\SceauBundle\Security\Extranet\User\WebserviceUserProvider">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="session"/>
        </service>

        <service id="fianet_sceau.extranet.donnees_request" class="FIANET\SceauBundle\Service\Extranet\DonneesRequest">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="fianet_sceau.notes"/>
        </service>
    </services>

</container>
