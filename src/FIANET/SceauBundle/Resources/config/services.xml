<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Général -->
        <!-- Validator -->
        <service id="fianet_sceau.validator.site_id" class="FIANET\SceauBundle\Validator\Constraints\SiteIdValidator">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <tag name="validator.constraint_validator" alias="validator.site_id" />
        </service>
        <service id="fianet_sceau.validator.flux_xml_format" class="FIANET\SceauBundle\Validator\Constraints\FluxXmlFormatValidator">
            <argument type="service" id="router" />
            <argument type="service" id="templating" />
            <tag name="validator.constraint_validator" alias="validator.flux_xml_format" />
        </service>
        <service id="fianet_sceau.validator.flux_xml_contenu" class="FIANET\SceauBundle\Validator\Constraints\FluxXmlContenuValidator">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="fianet_sceau.flux" />
            <argument type="service" id="fianet_sceau.questionnaire" />
            <argument>%flux_delai_max_commande%</argument>
            <tag name="validator.constraint_validator" alias="validator.flux_xml_contenu" />
        </service>

        <!-- Listener -->
        <service id="fianet_sceau.kernel.listener.exception" class="FIANET\SceauBundle\Listener\ExceptionListener">
            <argument type="service" id="templating" />
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
        </service>

        <!-- Métier -->
        <service id="fianet_sceau.flux" class="FIANET\SceauBundle\Service\GestionFlux">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="validator" />
        </service>
        <service id="fianet_sceau.questionnaire" class="FIANET\SceauBundle\Service\GestionQuestionnaire">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%langue_par_defaut%</argument>
        </service>

        <!-- Extranet -->
        <service id="fianet_sceau.extranet.menu_builder" class="FIANET\SceauBundle\Service\Extranet\MenuBuilder">            
            <argument type="service" id="knp_menu.factory"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="fianet_sceau.extranet.menu_acces"/>            
        </service>

        <service id="fianet_sceau.extranet.menu_acces" class="FIANET\SceauBundle\Service\Extranet\MenuAcces">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="security.context"/>
        </service>

        <service id="fianet_sceau.extranet.menu" class="Knp\Menu\MenuItem" scope="request">
            <factory service="fianet_sceau.extranet.menu_builder" method="creerMenu"/>
            <argument type="service" id="request"/>
            <tag name="knp_menu.menu" alias="extranet.menu"/>
        </service>

        <service id="fianet_sceau.extranet.user_provider" class="FIANET\SceauBundle\Security\Extranet\User\WebserviceUserProvider">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

    </services>

</container>
