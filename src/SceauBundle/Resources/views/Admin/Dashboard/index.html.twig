{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% set circleItem = 'SceauBundle:Admin/Common/Items:circle.html.twig' %}

{% block CONTENT %}
    <div class="page-content page-content-ease-in">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>Dashboard
                        <small>Content Overview</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active"><i class="fa fa-dashboard"></i> Dashboard</li>
                        <li class="pull-right">
                            <div id="reportrange" class="btn btn-green btn-square date-picker">
                                <i class="fa fa-calendar"></i>
                                <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            {% include circleItem with{
                'title': 'Sites',
                'color': 'dark-blue',
                'icon' : 'fa-users',
                'total': 10,
                'link' : "#"
            }%}

            {% include circleItem with{
                'title': 'Exemple',
                'color': 'green',
                'icon' : 'fa-money',
                'total': 10,
                'link' : "#"
            }%}

            {% include circleItem with{
                'title': 'Exemple2',
                'color': 'orange',
                'icon' : 'fa-bell',
                'total': 999,
                'link' : "#"
            }%}

        </div>

        <div class="row">

            {% include basicTableTemplate with{
                'title': 'Basic Responsive Table',
                'color': 'default',
                'type':  'table-striped',
                'columns': {'1':'column1','2':'column2','3':'column3','4':'column4'}
            }%}

            {% include basicTableTemplate with{
                'title': 'Striped Responsive Table',
                'color': 'green',
                'type':  'table-bordered',
                'columns': {'1':'test','2':'test2','3':'test3','4':'test4'}
            }%}

        </div>

        <div class="row">

            {% include advancedTableTemplate with{
                'title': 'Adanced table',
                'color': 'orange',
                'columns': {'1':'Column 1','2':'Column 2','3':'Column 3','4':'Column 4','5':'Column 5'},
                'datas': {},
            }%}

        </div>

    </div>
{% endblock %}