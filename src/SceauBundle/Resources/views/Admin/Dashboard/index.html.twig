{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% set circleTemplate = 'SceauBundle:Admin/Dashboard:circle.html.twig' %}
{% set basicTableTemplate = 'SceauBundle:Admin/Common/Tables:basic-table.html.twig' %}
{% set advancedTableTemplate = 'SceauBundle:Admin/Common/Tables:advanced-table.html.twig' %}

{% block CONTENT %}
    <div class="page-content page-content-ease-in">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>Dashboard
                        <small>Content Overview</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active"><i class="fa fa-dashboard"></i> Dashboard</li>
                        <li class="pull-right">
                            <div id="reportrange" class="btn btn-green btn-square date-picker">
                                <i class="fa fa-calendar"></i>
                                <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            {% include circleTemplate with{
                'title': 'Sites',
                'color': 'dark-blue',
                'icon' : 'fa-users',
                'total': 10
            }%}

            {% include circleTemplate with{
                'title': 'Exemple',
                'color': 'green',
                'icon' : 'fa-money',
                'total': 10
            }%}

            {% include circleTemplate with{
                'title': 'Exemple2',
                'color': 'orange',
                'icon' : 'fa-bell',
                'total': 999
            }%}
        </div>

        <div class="row">

            {% include basicTableTemplate with{
                'title': 'Basic Responsive Table',
                'color': 'default',
                'type':  'table-striped'
            }%}

            {% include basicTableTemplate with{
                'title': 'Striped Responsive Table',
                'color': 'green',
                'type':  'table-bordered'
            }%}

        </div>

        <div class="row">

            {% include advancedTableTemplate with{
                'title': 'Adanced table',
                'color': 'orange'
            }%}

        </div>

    </div>
{% endblock %}