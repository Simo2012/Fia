{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT %}
    
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li class="active">Gestions des questions</li>
    </ol>

    <h1 class="page-header">Gestions des questions</h1>
        
    <div class="row">
        <!-- begin panel -->
        <div class="col-md-12">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                    <h4 class="panel-title">Liste des questions des internautes</h4>
                </div>
                <div class="panel-body">

                    <form id="filters" class="form-inline" action="{{path('questions')}}">
                     {#    {% form_theme filtersForm 'bootstrap_3_horizontal_layout.html.twig' %}
                        {{ form(filtersForm) }} #}
                        <div class="form-group m-r-10">
                            {{ form_row(filtersForm.etat) }}
                        </div>
                        <div class="form-group m-r-10">
                            {{ form_row(filtersForm.type) }}
                        </div>
                        <div class="form-group m-r-10">
                            {{ form_row(filtersForm.moderateur) }}
                        </div>
                    </form>
                    <br/>
                    
                    <table id="data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Date</th>
                                <th>SiteID</th>
                                <th>Site</th>
                                <th>Nom</th>
                                <th>categorie</th>
                                <th>type</th>
                                <th>Question</th>
                                <th>Etat</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ticket in entities %}
                                <tr class="odd gradeX">
                                    <td>{{ ticket.id }}</td>
                                    <td>{{ ticket.date|date("m/d/Y") }}</td>
                                    <td>
                                        {% if ticket.site %}
                                            {{ ticket.site.id }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ticket.site %}
                                            {{ ticket.site.nom }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if ticket.auteur %}
                                            {{ ticket.auteur.firstName }} {{ ticket.auteur.lastName }}
                                        {% endif %}
                                    </td>
                                    <td>{{ ticket.categorie }}</td>
                                    <td>{{ ticket.type }}</td>
                                    <td>
                                        <a href="{{ path('question_show', { 'id': ticket.id }) }}">
                                            {{ ticket.question|truncate(15) }}
                                        </a>
                                    </td>
                                    <td>
                                        {% if ticket.etat %}
                                            <span class="label label-success">Trait√©e</span>
                                        {% else %}
                                            <span class="label label-warning">En attente</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end panel -->
    </div>
{% endblock %}


{% block JAVASCRIPT %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('form').change(function() {
                console.log('submit');
                $('form').submit();
            });
        });
    </script>
{% endblock %}