{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT %}
    <div class="page-content page-content-ease-in">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>Gestions des questions
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active"><i class="fa fa-dashboard"></i> Liste des questions des internautes</li>
                        <li class="pull-right">
                            <div id="reportrange" class="btn btn-green btn-square date-picker">
                                <i class="fa fa-calendar"></i>
                                <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="filters" action="{{path('questions')}}">
                    {{ form_row(filtersForm.etat) }}
                    {{ form_row(filtersForm.type) }}
                    {{ form_row(filtersForm.destinataire) }}
                </form>
                
            </div>
            
            <div class="col-lg-12">
                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Liste des questions des internautes</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Date</th>
                                    <th>SiteID</th>
                                    <th>Site</th>
                                    <th>Nom</th>
                                    <th>categorie</th>
                                    <th>type</th>
                                    <th>Question</th>
                                    <th>Etat</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for ticket in entities %}
                                    <tr class="odd gradeX">
                                        <td>{{ loop.index }}</td>
                                        <td>{{ ticket.date|date("m/d/Y") }}</td>
                                        <td>{# {{ question.site.id }} #}</td>
                                        <td>{# {{ question.site.nom }} #}</td>
                                        <td>
                                            {% if ticket.site %}
                                                {{ ticket.site.id }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if ticket.site %}
                                                {{ ticket.site.nom }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if ticket.auteur %}
                                                {{ ticket.auteur.firstName }} {{ ticket.auteur.lastName }}
                                            {% endif %}
                                        </td>
                                        <td>ok</td>
                                        <td>{{ ticket.type }}</td>
                                        <td>
                                            <a href="{{ path('question_show', { 'id': loop.index }) }}">
                                                {{ ticket.question|truncate(15) }}
                                            </a>
                                        </td>
                                        <td>
                                            {% if ticket.etat %}
                                                <span class="label green">Trait√©e</span>
                                            {% else %}
                                                <span class="label orange">En attente</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->
            </div>
        </div>
    </div>
{% endblock %}


{% block JAVASCRIPT %}
    <script type="text/javascript">
    
        $('form').change(function() {
            console.log('submit');
            $('form').submit();
        });
  
    </script>
{% endblock %}