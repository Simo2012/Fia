{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT %}
    <div class="page-content page-content-ease-in">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>Gestions des questions
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active"><i class="fa fa-dashboard"></i> Liste des questions des internautes</li>
                        <li class="pull-right">
                            <div id="reportrange" class="btn btn-green btn-square date-picker">
                                <i class="fa fa-calendar"></i>
                                <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="filters">
                    {{ form_row(ticketFilters.etat) }}
                    {{ form_row(ticketFilters.type) }}
                    {{ form_row(ticketFilters.destinataire) }}
                </form>
                
            </div>
            
            <div class="col-lg-12">
                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Liste des questions des internautes</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Date</th>
                                    <th>SiteID</th>
                                    <th>Site</th>
                                    <th>Nom</th>
                                    <th>Type</th>
                                    <th>Service</th>
                                    <th>Question</th>
                                    <th>Etat</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% include 'SceauBundle:Admin/Questions:list.html.twig' %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->
            </div>
        </div>
    </div>
{% endblock %}


{% block JAVASCRIPT %}
    <script type="text/javascript">
        

        $("form").change(function() {
            var data = {};
            $("form#filters").serializeArray().map(function(x){data[x.name] = x.value;}); 
            console.log(data);
            $.ajax({
                type: 'POST',
                data: data,          
                url:  '{{path('question_update_filters') }}',      
                success: function(response) {
                    console.log(response);
                    $('div.tickets-list').html(response);
                }
            });
        });
  

    </script>
{% endblock %}