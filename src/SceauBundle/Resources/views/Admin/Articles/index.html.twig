{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% set flashMessageItem = 'SceauBundle:Admin/Common/Items:flash-message.html.twig' %}

{% block CONTENT %}

    <div class="page-content page-content-ease-in">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>Article de presse</h1>
                    <ol class="breadcrumb">
                        <li class="active"><i class="fa fa-dashboard"></i> Article</li>
                        <li class="pull-right">
                            <div id="reportrange" class="btn btn-green btn-square date-picker">
                                <i class="fa fa-calendar"></i>
                                <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        {# Affichage des messages flash  #}
        {% for message in app.session.flashbag.get('info') %}
            {% include flashMessageItem with{
            'message': message
            }%}
        {% endfor %}

        <div class="row">

            <div class="col-lg-12">

                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Listes des articles de presse</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Titre</th>
                                    <th>Date</th>
                                    <th>contenu</th>
                                    <th>Publication</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for articlePresse in articlePresses %}
                                    <tr class="odd gradeX">
                                        <td>{{ loop.index }}</td>
                                        <td>{{ articlePresse.title }}</td>
                                        <td>{{ articlePresse.date|date("m/d/Y")  }}</td>
                                        <td>{{ articlePresse.content }}</td>
                                        <td>
                                            {% if articlePresse.published %}
                                                <span class="label label-success">Publié</span>
                                            {% else %}
                                                <span class="label label-warning">Non publié</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                                <a class="btn btn-green btn-md" href="{{ path('article_show', { 'id': articlePresse.id }) }}">Voir</a>

                                                <a class="btn btn-orange btn-md" href="{{ path('article_edit', { 'id': articlePresse.id }) }}">Editer</a>

                                            <a class="btn btn-red btn-md" data-toggle="modal" data-target="{{'#' ~  articlePresse.id  }}">
                                                Supprimer
                                            </a>
                                        </td>
                                    </tr>

                                        <div class="modal modal-flex fade" id="{{ articlePresse.id }}" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title" id="flexModalLabel">Suppressin de l'article {{ articlePresse.title }}</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Etes-vous sur de vouloir supprimer cet article ?</p>
                                                        {{ render(controller('SceauBundle:Admin/ArticlePresse:delete', { 'id': articlePresse.id })) }}
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                    </div>
                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>
                                    {% endfor %}
                                </tbody>

                            </table>
                            <a href="{{ path('article_new')}}" class="btn btn-green">Ajouter</a>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->

            </div>

        </div>

    </div>
{% endblock %}