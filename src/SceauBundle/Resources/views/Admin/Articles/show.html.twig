{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT -%}

<div class="page-content page-content-ease-in">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Article
                    <small>Content Overview</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active"><i class="fa fa-dashboard"></i> Article</li>
                    <li class="pull-right">
                        <div id="reportrange" class="btn btn-green btn-square date-picker">
                            <i class="fa fa-calendar"></i>
                            <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                        </div>
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <h1>Article presse</h1>
    <div class="row">

        <div class="col-lg-6">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Titre : {{ entity.title }} <em>{{  entity.date|date('m/d/Y') }}</em></h4>
                    </div>
                    <div class="portlet-widgets">
                        {% if entity.published %}
                            <span class="label green">Label</span>
                        {% else %}
                            <span class="label orange">Non publi√©</span>
                        {% endif %}
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="#defaultPortlet"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="defaultPortlet" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <p>{{ entity.content }}</p>
                    </div>
                </div>
                <div class="portlet-footer">
                    <p>Source : {{ entity.source }}  <em>{{ entity.urlSource }}</em></p>
                </div>
            </div>
        </div>
    </div>
</div>

        <p>
            <a class = "btn btn-green btn-md" href="{{ path('articles') }}">Retour </a>
            <a class = "btn btn-orange btn-md" href="{{ path('article_edit', { 'id': entity.id }) }}">Modifier </a>
            {{ form(delete_form) }}
        </p>
</ul>
{% endblock %}
