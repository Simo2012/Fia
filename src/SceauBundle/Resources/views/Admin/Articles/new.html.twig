{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT -%}

<div class="page-content page-content-ease-in">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Article
                    <small>Content Overview</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active"><i class="fa fa-dashboard"></i> Article</li>
                    <li class="pull-right">
                        <div id="reportrange" class="btn btn-green btn-square date-picker">
                            <i class="fa fa-calendar"></i>
                            <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                        </div>
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <!-- begin col-8 -->
        <div class="col-md-6">
            <div class="panel panel-inverse" data-sortable-id="ui-buttons-1"->
                <div class="panel-heading">
                    <h4 class="panel-title">Ajouter un article</h4>
                </div>
                <div class="panel-body">
                    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
