{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT -%}

<div class="page-content page-content-ease-in">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Actualité
                    <small>Content Overview</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active"><i class="fa fa-dashboard"></i> Actualité</li>
                    <li class="pull-right">
                        <div id="reportrange" class="btn btn-green btn-square date-picker">
                            <i class="fa fa-calendar"></i>
                            <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                        </div>
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <h1>Actualité</h1>
    <div class="row">

        <div class="col-lg-6">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>{{ entity.title }}</h4>
                    </div>
                    <div class="portlet-widgets">
                        {% if entity.active %}
                            <span class="label green">Actif</span>
                        {% else %}
                            <span class="label orange">Innactif</span>
                        {% endif %}
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="#defaultPortlet"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="defaultPortlet" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <p>{{ entity.introduction }}</p><br>
                        <p>{{ entity.content }}</p>
                    </div>
                </div>
                <div class="portlet-footer">
                    <p>Date de publication: {{  entity.date|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>

                <p><a class = "btn btn-green btn-md" href="{{ path('actualites') }}">Retour </a></p>
                <p><a class = "btn btn-orange btn-md" href="{{ path('actualites_edit', { 'id': entity.id }) }}">Modifier </a></p>
                {{ form(delete_form) }}

    </div>
</div>


</ul>
{% endblock %}
