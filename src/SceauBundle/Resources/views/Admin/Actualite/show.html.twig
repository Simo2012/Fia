{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT -%}

<div class="page-content page-content-ease-in">
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li class="active"><a href="javascript:;">Gestion des actualités</a></li>
        <li class="active">Actualité n°{{ entity.id }}</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">Actualité<small> édition de l'actualité</small></h1>
    <!-- end page-header
    <!-- begin row -->
    <div class="row">
        <!-- begin col-6 -->
        <div class="col-md-6">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="ui-buttons-1"->
                <div class="panel-heading">
                    <h4 class="panel-title">{{ entity.title }}
                        {% if entity.active %}
                             <span class="label label-success pull-right">Active</span>
                        {% else %}
                            <span class="label label-warning pull-right">Innactive</span>
                        {% endif %}
                    </h4>
                </div>
                <div class="panel-body bg-aqua text-white">
                    <p>{{ entity.introduction }}</p><br>
                    <p>{{ entity.content }}</p>
                </div>
                <div class="panel-footer text-left">
                    <p>Date de publication: {{  entity.date|date('d/m/Y') }}</p>
                </div>
            </div>
            <!--  end panel-->
        </div>
        <!-- end col-6 -->
        <div class="btn-group-vertical">
             <a class="btn btn-success" href="{{ path('actualites') }}">Retour</a>
             <a class="btn btn-warning active" href="{{ path('actualites_edit', { 'id': entity.id }) }}">Editer</a>
                {{ form(delete_form) }}
        </div>
    </div>
    <!-- end row -->

</div>

{% endblock %}
