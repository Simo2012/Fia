{% extends 'SceauBundle:Admin:layout.html.twig' %}

{% block CONTENT %}

    {# On affiche tous les messages flash dont le nom est « info » #}
    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-success">
            <p> Information: {{ message }}</p>
        </div>
    {% endfor %}

    {# On affiche tous les messages flash dont le nom est « delete » #}
    {% for message in app.session.flashbag.get('delete') %}
        <div class="alert alert-success">
            <p> Suppression: {{ message }}</p>
        </div>
    {% endfor %}

    <div class="page-content page-content-ease-in">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>Actualité</h1>
                    <ol class="breadcrumb">
                        <li class="active"><i class="fa fa-dashboard"></i> Actualité</li>
                        <li class="pull-right">
                            <div id="reportrange" class="btn btn-green btn-square date-picker">
                                <i class="fa fa-calendar"></i>
                                <span class="date-range"></span> <i class="fa fa-caret-down"></i>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">

            <div class="col-lg-12">

                <div class="portlet portlet-default">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Listes des actualités</h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Titre</th>
                                    <th>Introduction</th>
                                    <th>Actif</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr class="odd gradeX">
                                        <td>{{ entity.date|date("m/d/Y")  }}</td>
                                        <td>{{ entity.title }}</td>
                                        <td>{{ entity.introduction | truncate(35, true, '...') }}</td>
                                        <td>
                                            {% if entity.active %}
                                                <span class="label label-success">Actif</span>
                                            {% else %}
                                                <span class="label label-warning">Non actif</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a class="btn btn-green btn-md btn-square" href="{{ path('actualites_show', { 'id': entity.id }) }}">Voir</a>

                                            <a class="btn btn-orange btn-md btn-square" href="{{ path('actualites_edit', { 'id': entity.id }) }}">Editer</a>

                                            <a class="btn btn-red btn-md btn-square" data-toggle="modal" data-target="{{'#' ~  entity.id  }}">
                                                Supprimer
                                            </a>
                                        </td>
                                    </tr>

                                    <div class="modal modal-flex fade" id="{{ entity.id }}" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="flexModalLabel">Suppression de l'actualité {{ entity.title }}</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Etes-vous sur de vouloir supprimer cette actualité ?</p>
                                                    {{ render(controller('SceauBundle:Admin/Actualite:delete', { 'id': entity.id })) }}
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                </div>
                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>
                                {% endfor %}
                                </tbody>

                            </table>
                            <a href="{{ path('actualites_new')}}" class="btn btn-green">Ajouter</a>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.portlet-body -->
                </div>
                <!-- /.portlet -->

            </div>

        </div>

    </div>
{% endblock %}