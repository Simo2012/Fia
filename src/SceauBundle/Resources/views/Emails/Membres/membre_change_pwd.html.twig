{% block body %}
	<td colspan="4" align="left" style="line-height:normal">
		<table width="480" align="center" border="0" cellspacing="0" cellpadding="0"  style="line-height:normal">
			<tr style="line-height:normal">
				<td style="line-height:normal; font-family:Arial, Helvetica, sans-serif; font-size:12px; color:#3e262b; text-align:justify;">
					<strong>##PRENOM##,</strong>
					<br /><br />
				</td>
			</tr>
			<tr style="line-height:normal">
				<td style="line-height:normal; font-family:Arial, Helvetica, sans-serif; font-size:12px; color:#3e262b; text-align:justify;">
