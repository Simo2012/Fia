{% macro input(title, description, action) %}
<div id="newsletter-success-popup">
        <div id="newsletter-success-popup-conteneur">
            <h2 id="newsletter-success-popup-titre">{{title}}</h2>
                <p id="newsletter-success-popup-texte">
                    {{description}}
                </p>
                <div style="text-align:center;">
                    <div class="btn-espace-membre-inline">
                        <div class="btn-1-main">
                            <a id="mon-compte-popup-close" href="{{action}}" class="btn-1-link">
                                <img width="6" height="10" src="{{ asset('bundles/sceau/images/site/home/picto_btn_chevron.png') }}" /> OK
                            </a>
                        </div>
                        <div class="btn-1-end"></div>
                    </div>
                </div>
        </div>
    </div>
    {{ app.session.set('confirmation',null) }}
    {{ app.session.set('success',null) }}
    
{% endmacro %}