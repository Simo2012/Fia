				<div class="btn-espace-membre-inline">
                                    <div class="btn-1-main">
                                        <input type="submit" value="Valider" class="btn-home-regiter" /> 
                                    </div>
                                    <div class="btn-1-end"></div>
				</div>
				<div id="mon-compte-erreur-abonnements" class="mon-compte-erreur" style="display:none; width:485px;"></div>
