                'bundles/sceau/js/site/home/SliderSitePremium.js'
                'bundles/sceau/js/site/common/commun.js'
                'bundles/sceau/js/site/common/jquery-ui.js'
                'bundles/sceau/js/site/common/jquery-tools.js' %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
                <script type="text/javascript">
                    $(function() {
                        $("#newsletter-success-popup").overlay({
                            effect: 'default',
                            top: 'center',
                            mask: {
                                color: '#000000',
                                loadSpeed: 200,
                                opacity: 0.5
                            },
                            close: '#mon-compte-popup-close',
                            closeOnClick: true,
                            load: true,
                            oneInstance: true
                        });
                    });
                    var popupAvatar = "";
                    SelectAvatar(jQuery('#AvatarID').val());
                    function showPopupAvatar()
                        {
                                jQuery(function() {
                            popupAvatar = jQuery( "#avatar-popup" ).dialog({width:330});
                        });
                        }
                    function SelectAvatar(num)
                    {   
                        tab = jQuery('#avatar_id_' + num).attr('coords').split(',');
                        jQuery('#img_avatar').css('background-position','-' + tab[0] + 'px -' + tab[1] + 'px');
                        jQuery('#AvatarID').val(num);
                        if(popupAvatar)
                            popupAvatar.dialog( "close" );
                    }
                    
        
                </script>

            <script>
                var $acteur = $('#ticket_acteur');

                $acteur.change(function() {
                    var $form = $(this).closest('form');

                    var data = {};
                    data[$acteur.attr('name')] = $acteur.val();
//                    console.log(data);

                    $.ajax({
                        url : $form.attr('action'),
                        type: $form.attr('method'),
                        data : data,
                        success: function(html) {
                            console.log(html);
                            // Replace current position field ...
//                            $('#meetup_position').replaceWith(
                                    // ... with the returned one from the AJAX response.
//                                    $(html).find('#meetup_position')
//                            );
                            // Position field now displays the appropriate positions.
                        }
                    });
                });

            </script>
               
            {% endjavascripts %}  
        {% endblock %}
    </html>
    
