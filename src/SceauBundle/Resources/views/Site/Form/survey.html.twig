    <div id="{{ id }}_reponses" class="quest-detail-full">
        <table width="100%" cellspacing="0" cellpadding="0" border="0">
            <tbody>
            {%- for child in form %}
                {% if loop.index0 is even %}
                <tr>
                {% endif %}
                <td valign="top">{{- form_widget(child) -}}</td>
                <td valign="top" style="padding-top:3px;">{{- form_label(child, null, {translation_domain: choice_translation_domain}) -}}</td>
                {% if loop.index0 is odd or loop.last %}
