{%- block _questionnaire_reponse_optin_widget -%}
    <div id="bloc_optins">
        <p class="optin_partenaires_titre">{{ "Pour rester informé, cochez la case ci-dessous :"|trans({}, translation_domain) }}</p>
        <table cellspacing="0" cellpadding="0">
            <tbody>
