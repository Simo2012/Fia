<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sceau.kernel.listener.exception" class="SceauBundle\Listener\ExceptionListener">
            <argument type="service" id="templating" />
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
        </service>
        <service id="sceau.kernel.subscriber.locale" class="SceauBundle\Listener\LocaleListener">
            <argument>%locale%</argument>
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="sceau.ticket.reponse" class="SceauBundle\Listener\Entity\Ticket2Listener">
            <tag name="kernel.event_listener" event="ticket.reponse" method="ticketReponse" />
            <tag name="kernel.event_listener" event="ticket.reafectation" method="ticketReafectation" />
            <tag name="kernel.event_listener" event="ticket.note.create" method="ticketNoteCreate" />
        </service>
    </services>


</container>
