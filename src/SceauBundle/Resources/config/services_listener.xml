<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sceau.kernel.listener.exception" class="SceauBundle\Listener\ExceptionListener">
            <argument type="service" id="templating" />
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
        </service>
        <service id="sceau.kernel.subscriber.locale" class="SceauBundle\Listener\LocaleListener">
            <argument>%locale%</argument>
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="sceau.ticket.reponse" class="SceauBundle\Listener\Entity\TicketListener">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="kernel.event_listener" event="ticket.reponse" method="ticketReponse" />
            <tag name="kernel.event_listener" event="ticket.state.change" method="ticketNoteDelete" />
            <tag name="kernel.event_listener" event="ticket.note.create" method="ticketNoteCreate" />
            <tag name="kernel.event_listener" event="ticket.note.update" method="ticketNoteUpdate" />
            <tag name="kernel.event_listener" event="ticket.note.delete" method="ticketNoteDelete" />
            <tag name="kernel.event_listener" event="ticket.reafectation.categorie" method="ticketReafectationCategorie" />
            <tag name="kernel.event_listener" event="ticket.reafectation.destinataire" method="ticketReafectationDestinataire" />
        </service>
    </services>


</container>
